<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding AppVersion, StringFormat='Select devices - {0}'}"
             x:Class="BLE.Client.Pages.APHomePage">
    <ContentPage.Content>
        <StackLayout>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Button Grid.Row="1" Text="Flowcom S8" Command="{Binding DoWork}" HorizontalOptions="FillAndExpand"  CommandParameter="0"/>
                <Button Grid.Row="2" Text="Flowcom 3000" Command="{Binding DoWork}"  HorizontalOptions="FillAndExpand"  CommandParameter="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>